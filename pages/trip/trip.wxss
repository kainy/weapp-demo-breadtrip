@import "../../components/widget/icon_nav_home.wxss";
page{
  background-color: #fbf7ed;
}
.trip{
  padding: 40rpx 30rpx 0;
}
.trip .trip-top{
  overflow: hidden;
}
.trip .trip-user{
  float: left;
  width: 72rpx;
  height: 72rpx;
  border-radius: 72rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.trip .trip-info{
  max-width: 100%;
}
.trip .trip-info .h1{
  font-size: 40rpx;
  line-height: 1;
  color: #4abdcc;
  white-space: nowrap; 
  text-overflow: ellipsis; 
  overflow: hidden; 
  margin-bottom: 9rpx;
}
.trip .trip-info .detail{
  line-height: 1;
  color: #999;
  font-size: 22rpx;
}
.trip .trip-info .detail text{
  padding-right: 20rpx;
}
.trip-wps{
  margin-top: 36rpx;
}
.day .wp-sep{
  background: #e7ddc6;
  height: 36rpx;
  margin-left: 20rpx;
  width: 8rpx;
}
.day .day-marker{
  color: #a8915e;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 32rpx;
  height: 32rpx;
}
.day .circle{
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  border-radius: 16rpx;
  border: 8rpx solid #e7ddc6;
  margin: 0 8rpx;
  vertical-align: text-bottom;
}
.day-content .photo-ctn{
  position: relative;
}
.photo-ctn{
  background: #e7ddc6 url(https://a.kainy.cn/2019/weapp-ksk/placeholder.png) no-repeat center;
}
.day-content .cover{
  transition: .7s; 
  vertical-align: bottom;
}
.day-content .text{
  background-color: #fff;
  padding: 10rpx 20rpx 0;
  color: #5c5c5c;
  word-break: break-word;
}
.day-content .wp-stats{
  padding: 10rpx 18rpx 22rpx;
  background-color: #fff;
  overflow: hidden;
  border-bottom: 6rpx solid #e7e7e7;
}
.day-content .wp-stats .wp-time{
  font-size: 24rpx;
  float: left;
  color: #999;
  height: 44rpx;
  line-height: 44rpx;
}
.day-content .wp-stats .icon-time{
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
  position: relative;
  top: -2rpx;
  width: 24rpx;
  height: 24rpx;
}
@keyframes rotate {
  0%,
  100% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.playing {
  animation: rotate 4s linear infinite;
}
.audioCtrl {
  float:right;
  margin:22rpx;
}
.img_loadederror {
    background-color: #e7ddc6;
    background-image: url(data:image/png;base64,);
    background-size: 80rpx;
    background-position: center center;
    background-repeat: no-repeat;
}