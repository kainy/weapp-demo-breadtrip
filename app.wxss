page{
  font: 14px "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, STHeiti;
  line-height: 1.5;
}
.clearfix:after{
  content: '';
  clear: both;
  overflow: hidden;
  height: 0; 
  display: block; 
}
/**app.wxss**/
.flex-wrap{
  display: flex;
  flex-direction: row;
}
.tappable:hover {
  opacity: .6;
}

.container {
  padding: 4px 12px;
}
.form-wrap {
  border-top: 1px solid #eee;
  margin: 12px 0;
}

.hint,
.error {
  display: block;
  margin: 8px 0;
  color: #888;
  font-size: 14px;
}
.error {
  color: #e64240;
}
