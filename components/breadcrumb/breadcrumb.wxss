.breadcrumb {
	/*centering*/
	display: flex;
	box-shadow: 0 0 7rpx 1rpx rgba(0, 0, 0, 0.2);
	overflow: hidden;
	border-radius: 10rpx;
	counter-reset: flag;
  text-align: center;
  margin-bottom:30rpx;
	max-height:77rpx;
  width:100%;
  background:white;
}

.breadcrumb .a {
	flex-grow: 1;
	text-decoration: none;
	outline: none;
	font-size: 24rpx;
	line-height: 72rpx;
	color: white;
	padding: 0 20rpx 0 120rpx;
	background: #666;
	background: linear-gradient(#666, #333);
	position: relative;
}
.breadcrumb .a:first-child {
	padding-left: 92rpx;
	border-radius: 10rpx 0 0 10rpx; /*to match with the parent's radius*/
}
.breadcrumb .a:first-child:before {
	left: 28rpx;
}
.breadcrumb .a:last-child {
	border-radius: 0 10rpx 10rpx 0; /*this was to prevent glitches on hover*/
	padding-right: 40rpx;
}

.breadcrumb .a.active, .breadcrumb .a:hover{
	background: #333;
	background: linear-gradient(#333, #000);
}
.breadcrumb .a.active:after, .breadcrumb .a:hover:after {
	background: #333;
	background: linear-gradient(135deg, #333, #000);
}

.breadcrumb .a:after {
	content: '';
	position: absolute;
	top: 0; 
	right: -36rpx; /*half of square's length*/
	width: 72rpx; 
	height: 72rpx;
	transform: scale(0.707) rotate(45deg);
	z-index: 1;
	background: #666;
	background: linear-gradient(135deg, #666, #333);
	box-shadow: 
		2rpx -2rpx 0 2rpx rgba(0, 0, 0, 0.4), 
		3rpx -3rpx 0 2rpx rgba(255, 255, 255, 0.1);
	border-radius: 0 10rpx 0 100rpx;
}
.breadcrumb .a:last-child:after {
	content: none;
}
/*we will use the :before element to show numbers*/
.breadcrumb .a:before {
	content: counter(flag);
	counter-increment: flag;
	/*some styles now*/
	border-radius: 100%;
	width: 40rpx;
	height: 40rpx;
	line-height: 40rpx;
	margin: 16rpx 0;
	position: absolute;
	top: 0;
	left: 60rpx;
	background: #444;
	background: linear-gradient(#444, #222);
	font-weight: bold;
}


.flat .a, .flat .a:after {
	background: white;
	color: black;
	transition: all 0.5s;
}
.flat .a:before {
	background: white;
	box-shadow: 0 0 0 2rpx #ccc;
}
.flat .a:hover, .flat .a.active, 
.flat .a:hover:after, .flat .a.active:after{
	background: #9EEB62;
}